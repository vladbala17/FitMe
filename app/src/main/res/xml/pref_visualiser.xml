<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_show_protein_key"
        android:summary="@string/pref_show_true"
        android:summaryOff="@string/pref_show_false"
        android:title="@string/pref_show_protein_label" />

    <ListPreference
        android:defaultValue="Kilograms"
        android:entries="@array/pref_measure_unit_label"
        android:entryValues="@array/pref_measure_unit_values"
        android:key="@string/pref_show_measure_unit_key"
        android:title="@string/pref_show_measure_unit_label" />
</PreferenceScreen>